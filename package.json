    "type": "git",
    "url": "git+https://github.com/screepers/screeps-typescript-starter.git"
  },
  "license": "Unlicense",
  "author": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint \"src/**/*.ts\"",
    "pre-commit": "lint-staged -c ./config/lint-staged.config.js",
    "prepare": "husky install",
    "push-main": "rollup -c --environment DEST:main",
    "push-pserver": "rollup -c --environment DEST:pserver",
    "push-season": "rollup -c --environment DEST:season",
    "push-sim": "rollup -c --environment DEST:sim",
    "test": "npm run test-unit",
    "test-integration": "echo 'See docs/in-depth/testing.md for instructions on enabling integration tests'",
    "test-unit": "mocha test/unit/**/*.ts",
    "watch-main": "rollup -cw --environment DEST:main",
    "watch-pserver": "rollup -cw --environment DEST:pserver",
    "watch-season": "rollup -cw --environment DEST:season",
    "watch-sim": "rollup -cw --environment DEST:sim"
  },
  "dependencies": {
    "source-map": "~0.6.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/chai": "^4.1.6",
    "@types/eslint": "^8.4.10",
    "@types/lodash": "3.10.2",
    "@types/mocha": "^5.2.5",
    "@types/node": "^18.11.15",
    "@types/screeps": "^3.2.3",
    "@types/sinon": "^5.0.5",
    "@types/sinon-chai": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "@typescript-eslint/typescript-estree": "^4.29.1",
    "chai": "^4.2.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "lodash": "^3.10.1",
    "mocha": "^5.2.0",
    "prettier": "^2.8.1",
    "prettier-plugin-packagejson": "^2.3.0",
    "rollup": "^2.56.2",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-screeps": "^1.0.1",
    "rollup-plugin-typescript2": "^0.34.1",
    "sinon": "^6.3.5",
    "sinon-chai": "^3.2.0",
    "ts-node": "^10.2.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "//": "If you add or change the names of destinations in screeps.json, make sure you update these scripts to reflect the changes"
}
